<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-7 mx-auto">
                <div class="card my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Create new recipe</h5>
                        <form class="form-signin" action="/recipes/create" method="POST">
                            <div class="form-group p-2">
                                <input type="text" name="name" id="inputName" class="form-control" placeholder="recipe name" required autofocus>
                            </div>

                            <div class="form-group p-2">
                                <input type="text" name="type" id="inputType" class="form-control" placeholder="recipe type" required>
                            </div>

                            <div class="form-group p-2">
                                <input type="text" name="dif" id="inputDif" class="form-control" placeholder="recipe difficulty" required>
                            </div>

                            <div class="form-group p-2">
                                <textarea name="ingredients" id="inputIngredients" class="form-control" cols="30" rows="3"                           placeholder="ingredients, separated, by, coma" required></textarea>

                            </div>

                            <div class="form-group p-2">
                                <textarea name="steps" id="inputSteps" class="form-control" cols="30" rows="3"                              placeholder="steps, separated, by, coma" required></textarea>
                            </div>

                            <div class="form-group p-2">
                                <input type="text" name="time" id="inputTime" class="form-control" placeholder="recipe aprox time" required>
                            </div>

                            <div class="form-group p-2">
                                <textarea name="preview" id="inputPreview" class="form-control" cols="30" rows="3"               placeholder="recipe preview" maxlength="40" required></textarea>
                            </div>

                            <div class="form-group p-2">
                                <input type="url" name="url" id="inputImg" class="form-control" placeholder="recipe image url" required>
                            </div>

                            <button class="btn btn-primary btn-block text-uppercase" type="submit">Send new recipe</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
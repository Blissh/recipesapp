<div class="p-3">
    {{!-- tabla con registros de las recetas --}}
    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>
        Recipes data
        <a href="/recipes/add" class="btn btn-secondary float-right">Create</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Time req</th>
                            <th>preview</th>
                            <th>Ingredientes</th>
                            <th>Steps</th>
                            <th>Difficulty</th>
                            <th>Image URL</th>
                            <th>Edit</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Time req</th>
                            <th>preview</th>
                            <th>Ingredientes</th>
                            <th>Steps</th>
                            <th>Difficulty</th>
                            <th>Image URL</th>
                            <th>Edit</th>
                            <th>Remove</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        {{#each recipes}}
                            <tr>
                                <td>{{receta_nombre}}</td>
                                <td>{{receta_tipo}}</td>
                                <td>{{receta_tiempo}}</td>
                                <td>{{receta_preview}}</td>
                                <td>
                                    <ul>
                                    {{#each receta_ingredientes}}
                                        <li>{{this}}</li>
                                    {{/each}}
                                    </ul>
                                </td>
                                <td>
                                    <ul>
                                    {{#each receta_pasos}}
                                        <li>{{this}}</li>
                                    {{/each}}
                                    </ul>
                                </td>
                                <td>{{receta_dificultad}}</td>
                                <td>{{receta_images.[0]}}</td>
                                <td><a href="/recipes/update/{{_id}}" class="lg"><li class="fas fa-edit"></li></a></td>
                                <td>
                                    <form action="/recipes/delete/{{_id}}?_method=DELETE" method="DELETE">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>

                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>